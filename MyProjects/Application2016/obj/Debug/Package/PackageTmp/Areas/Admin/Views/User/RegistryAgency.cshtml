                {
                    avatarFile = AdminConfigs.IMAGE_PATH + Model.UserName + AdminConfigs.ALTDIRECTORYSEPARATORCHAR + avatarFile;
                    Model.Avatar = "";
                }
                else
                {
                    avatarFile = "~/Assets/Admin/images/avatars/profile-pic.jpg";
                }
                                        }
