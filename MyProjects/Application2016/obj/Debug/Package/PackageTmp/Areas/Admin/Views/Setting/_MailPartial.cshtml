@model Application2016.Areas.Admin.Models.MailModel
<div class="col-sm-4">
	<div class="widget-box collapsed">
		<div class="widget-header">
			<h4 class="widget-title">Cập nhật cấu hình gửi mail</h4>

			<div class="widget-toolbar">
				<a href="#" data-action="collapse">
					<i class="ace-icon fa fa-chevron-down"></i>
				</a>

				@*<a href="#" data-action="close">
					<i class="ace-icon fa fa-times"></i>
				</a>*@
			</div>
		</div>            
        @using (Html.BeginForm("UpdateMailConfig", "Setting", FormMethod.Post))
        {
            <div class="widget-body" style="display: none;">
				<div class="widget-main">
					<div class="form-group">
						<label class="col-sm-4">Email gửi </label>
                        <div class="input-group col-sm-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "col-sm-10", @style = "width: 100%;" })
                        </div>
					</div>
                    <div class="space-10"></div>
                    <div class="form-group">
						<label class="col-sm-4">Cổng gửi </label>
                        <div class="input-group col-sm-8">
                            @Html.TextBoxFor(m => m.Port, new { @class = "col-sm-10", @style="width: 100%;"})
                        </div>
					</div>
                    <label>
                        <button class="btn btn-info" type="submit" value="Update">Update</button>
                    </label>
				</div>
			</div>                
        }			
	</div>
</div>