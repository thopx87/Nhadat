@using Application2016.Helpers
@{
    Layout = null;
}

<div class="col-xs-12 col-sm-4">
    <div class="ui-jqgrid-view">
        <div class="table-header">
            <span class="ui-jqgrid-title">@AdminConfigs.TEXT_LIST_WARD</span>
        </div>
        <div class="ui-jqgrid-hdiv ui-state-default" style="width: 360px;">
            <div class="ui-jqgrid-hbox">
                <table class="ui-jqgrid-htable ui-common-table" role="presentation" style="width: 360px;">
                    <thead>
                        <tr class="ui-jqgrid-labels">
                            <th style="width: 30px">STT</th>
                            <th style="width: 150px">@AdminConfigs.TEXT_NAME_WARD</th>
                            <th style="width: 100px"></th>
                        </tr>
                    </thead>                    
                </table>
            </div>
            <div class="ui-jqgrid-bdiv" style="height: 200px; width: 360px; overflow-y: scroll;">
                <table class="table table-striped table-bordered table-hover">
                    @{int i = 0;}
                    @foreach (var ward in ViewBag.ListWard as IList<Entities.Place>)
                    {
                        i = i + 1;
                        <tr class="jqgrow ui-row-ltr ui-widget-content ui-priority-secondary" role="row">
                            <td style="width: 30px"> @i</td>
                            <td style="width: 150px">@ward.Text</td>
                            <td style="width:100px">
                                <div>
                                    <span class="ui-icon ace-icon fa fa-plus center bigger-110 blue"></span>
                                    <a href="@Url.Action("UpdateWard", "Place", new { id = ward.Id, cityId = ViewBag.CityId, districtId = ward.Parent })"><span class="ui-icon ace-icon fa fa-pencil blue"></span></a>
                                    <a href="@Url.Action("DeletePlace", "Place", new { id = ward.Id })" onclick="return confirm('@string.Format(@Application2016.Helpers.AdminConfigs.CONFIRM_DELETE,@ward.Text)')"><span class="ui-icon ace-icon fa fa-trash-o red"></span></a>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
