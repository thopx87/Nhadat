@model Application2016.Areas.Admin.Models.SettingModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section HeaderContent{
    <script src="@Url.Content("~/Assets/Admin/js/spinbox.min.js")"  type="text/javascript"></script>
}
@section MainContent{

<div class="main-content">
    <div class="main-content-inner">
        <div class="page-content">
            <div class="row">
                <!-- Vùng cập nhật danh sách tỉnh, huyện -->
                @Html.Partial("_PlacePartial")

                <!-- Vùng cập nhật danh sách vùng -->
                @Html.Partial("_RegionPartial")

                <!-- Cập nhật cấu hình gửi mail -->
                @Html.Partial("_MailPartial", Model.MailSetting)

                <!-- Cập nhật thông tin website -->
                @Html.Partial("_WebsitePartial", Model.webSetting)

                <!-- Cập nhật thông tin mạng xã hội -->
                @Html.Partial("_SocialNetworkPartial", Model.socialNetworkSetting)

                @*<!-- Cập nhật cấu hình phân quyền-->    
                @Html.Partial("_RolePartial", Model.RoleSetting)*@
            </div>
        </div>
    </div>
</div>
    

