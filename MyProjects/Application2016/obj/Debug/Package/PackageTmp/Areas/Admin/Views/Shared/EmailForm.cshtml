<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h4 class="orange center lighter bigger">
                <i class="ace-icon fa fa-email red"></i>Gửi email</h4>
        </div>
        <div class="modal-body">
            <div class="widget-body">
                <div class="widget-main">
                    @using (Html.BeginForm("DoSendMailMulti", "User", FormMethod.Post))
                    {
                    <fieldset>
                        <div class="col-md-12">
                            <div class="row">
                                
                            </div>
                        </div>

                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                                <input type="radio" checked="checked" name="objSend" id="objChoiced" value="1" class="ace input-lg" /> <label for="objChoiced" class="lbl bigger-120">Gửi cho những người đã chọn</label>  
                                <input type="radio" name="objSend" id="objAll" value="2" class="ace input-lg"/> <label for="objAll" class="lbl bigger-120">Gửi cho toàn bộ.</label>
                            </span>
                        </label>
                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                                <input type="text" id="SendTo" name="SendTo" value="@ViewBag.ListEmail" placeholder="Người nhận" class ="form-control"/>
                                <i class="ace-icon fa fa-user red"></i>
                            </span>
                        </label>
                        <label class="block clearfix">
                            <span class="block">
                                @Html.TextBox("Subject", null, new { @class = "form-control", @placeholder = "Chủ đề ..." })
                            </span>
                        </label>                        
                        <label class="block clearfix">
                            <div class="wysiwyg-editor" id="editor1">                            
                            </div>
                            @Html.Hidden("Content")
                        </label>
                        <div class="clearfix">
                            <button type="button" id="btnRegister" class="width-100 btn btn-sm btn-success">
                                <span class="orange bigger-150">Gửi</span> <i class="ace-icon fa fa-arrow-right icon-on-right">
                                </i>
                            </button>
                        </div>
                    </fieldset>
                    }
                </div>
            </div>
