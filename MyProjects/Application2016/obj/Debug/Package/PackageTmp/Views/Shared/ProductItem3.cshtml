@using Application2016.Helpers;
<ul class="products-grid">
    @foreach (var item in ViewBag.ListProduct as IList<Entities.Product>)
    {
        string image = "no avatar";
        if (item.Avatar != null && item.Avatar != "" && item.Avatar_Url != null)
        {
            image = item.Avatar_Url + item.Avatar;
        }

        <li class="item col-md-2">
            <div class="col-item">
                <div class="sale-label sale-top-right">
                    Sale 30%</div>
                <div class="item-inner">
                    <div class="item-img">
                        <div class="item-img-info">
                            <a href="@Url.Action("Detail", "Product")/@item.Id" title="@item.Text" class="product-image">
                                <img src="@Url.Content(@image)" alt="@item.Text" />
                            </a>
                            <div class="item-box-hover">
                                <div class="box-inner">
                                    <div class="product-detail-bnt">
                                        <a href="@Url.Action("Detail", "Product")/@item.Id" class="button detail-bnt"><span>
                                            Chi tiết</span></a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item-info">
                        <div class="info-inner">
                            <div class="item-title">
                                <a href="@Url.Action("Detail", "Product")/@item.Id" title="Sample Product">@item.Text
                                </a>
                            </div>
                            <div class="item-content">
                                @*<div class="rating">
                                        <div class="ratings">
                                            <div class="rating-box">
                                                <div class="rating" style="width: 60%">
                                                </div>
                                            </div>
                                            <p class="rating-links">
                                                <a href="#">1 Review(s)</a> <span class="separator">|</span> <a href="#">Add Review</a>
                                            </p>
                                        </div>
                                    </div>*@
                                <div class="item-price">
                                    <div class="price-box">
                                        <span class="regular-price"><span class="price">@item.StandardCost.MoneyFormat()</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="actions">
                            <span class="add-to-links">@*<a href="wishlist.html" class="link-wishlist" title="Add to Wishlist"> <span>Add to Wishlist</span></a>*@
                                <button type="button" title="Đặt mua" class="button" id="@item.Id"  data-toggle="modal" style="float:left" data-target="#myModal">
                                    <span>Đặt mua</span></button>
                                &nbsp; &nbsp;&nbsp;
                                <button type="button" title="Theo dõi" class="button" id="@item.Id"  data-toggle="modal" style="float:left"  data-target="#myModal">
                                    <span>Theo dõi</span></button>
                                @*<a href="compare.html" class="link-compare" title="Add to Compare"><span>Add to Compare</span></a>*@
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
