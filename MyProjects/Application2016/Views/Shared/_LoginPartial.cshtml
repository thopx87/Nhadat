<script type="text/javascript" >
     $(function () {
        $('#dialog').dialog({
            autoOpen: false,
            width: 200,
            height: 200,
            resizable: false,
            title: 'Đăng nhập',
            modal: true,
            open: function(event, ui) {
                $(this).load("@Url.Action("Logon", "Account")");
            },
            buttons: {
                "Close": function () {
                    $(this).dialog("close");
                }
            }
        });
         $("#opener").click(function () {
             $("#dialog").dialog("open");
         });
     });
  </script>
  <div id="dialog" title="Basic dialog" >Please wait</div>
  <a id="opener" href="#" style="color: White">Login</a>