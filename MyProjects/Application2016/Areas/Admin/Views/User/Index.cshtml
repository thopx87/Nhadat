@model Application2016.Areas.Admin.Models.UserModel
@using Application2016.Helpers
@{
    ViewBag.Title = "User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section MainContent{
<div class="main-content">
    <div class="main-content-inner">
    @using (Html.BeginForm("Update", "User", new { id = Model == null ? 0 : Model.Id }, FormMethod.Post))
    {           
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <input class="btnDefine btn btn-primary" value="Cập nhật" type="submit" />
            <a href="@Request.Url" id="btnRefresh" class="btnDefine btn btn-primary">Refresh</a>
	        <div class="nav-search" id="nav-search">
		        @*<form class="form-search">
			        <span class="input-icon">
				        <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
				        <i class="ace-icon fa fa-search nav-search-icon"></i>
			        </span>
		        </form>*@
	        </div><!-- /.nav-search -->
        </div>
        <div class="page-content">
            <div class="row">        
                <div id="modal-table" class="modal fade" tabindex="-1">
                </div>
                <div class="col-xs-12">
                    <div class="row">
			            <div class="col-xs-12">
				
                            @Html.Partial("ListUser")

                            <div id="fillData">
                            </div>
			            </div><!-- /.span -->
		            </div><!-- /.row -->
		            <!-- PAGE CONTENT ENDS -->
	            </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    }
    </div>
</div>
<script type="text/javascript">
    $('.show-details-btn').on('click', function (e) {
        e.preventDefault();
        $(this).closest('tr').next().toggleClass('open');
        $(this).find(ace.vars['.icon']).toggleClass('fa-angle-double-down').toggleClass('fa-angle-double-up');
    });

    $("#checkAll").click(function () {
        $(".check").prop('checked', $(this).prop('checked'));
    });
</script>
}
