	<body class="login-layout">
        @*Kiểm tra xem có thông báo lỗi chưa đăng nhập hay không.*@
        @if (TempData[AdminConfigs.TEMP_MESSAGE] != null)
        {
            <div class="modal fade" id="message-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            Thông báo đăng nhập
                        </div>
                        <div class="modal-body">
                            @TempData[AdminConfigs.TEMP_MESSAGE]
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <script type="text/javascript">

                $(document).ready(function () {
                    $('#message-login').modal("show");
                });
            </script>
            TempData[AdminConfigs.TEMP_MESSAGE] = null;
        }
		<div class="main-container">
			<div class="main-content">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="login-container">
                        <div class="space-6"></div>
							<div class="position-relative">
                                @RenderSection("MainLogin")
							</div><!-- /.position-relative -->

                            <div class="navbar-fixed-top align-right">
								<br />
								&nbsp;
								<a href="@Url.Action("Index","Home", new{Area =""})">Trang chủ</a>
								&nbsp;
								<span class="blue">/</span>
								&nbsp;
								<a href="@Application2016.Helpers.SiteMap.PAGE_SITE_CONTACT">Liên hệ</a>
								&nbsp;
                                
                                @if(Request.UrlReferrer != null)
                                {
                                    <span class="blue">/</span>
                                    <a onclick="history.go(-1); return false;" href="#">Quay lại</a>
                                }
								&nbsp; &nbsp; &nbsp;
							</div>
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.main-content -->
		</div><!-- /.main-container -->
